<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:id="@+id/item"
    xmlns:xiong="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="80dp">

    <com.gzucm.wsyy.view.ProportionImageView
        android:id="@+id/timeduan"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        xiong:widthProportion = "10"
        xiong:heightProportion="7"
        android:scaleType="fitXY"
        android:src="@drawable/t01"
        android:layout_width="65dp"
        android:layout_height="60dp" />
    <TextView
        android:id="@+id/money"
        android:layout_marginLeft="7dp"
        android:layout_gravity="center"
        android:text="30"
        android:textColor="@color/yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="2dp"
        android:layout_gravity="center"
        android:text="元"
        android:textColor="@color/main_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="gone"
        android:id="@+id/man"
        android:drawableRight="@drawable/man"
        android:drawablePadding="5dp"
        android:layout_marginRight="15dp"
        android:gravity="right"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@color/main_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:id="@+id/guahao"
        android:drawableRight="@drawable/right_arrow"
        android:drawablePadding="5dp"
        android:layout_marginRight="15dp"
        android:gravity="right"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="可挂号"
        android:textColor="@color/main_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
