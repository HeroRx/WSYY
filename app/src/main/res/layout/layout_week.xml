<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/w01"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周一" />

            <TextView
                android:id="@+id/d01"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="11-19"
                android:textSize="10sp" />
        </LinearLayout>

        <View
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray"
            android:layout_width="0.4dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/w02"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周二" />

            <TextView
                android:id="@+id/d02"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="30"
                android:textSize="10sp" />
        </LinearLayout>
        <View
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray"
            android:layout_width="0.4dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/w03"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周三" />

            <TextView
                android:id="@+id/d03"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="31"
                android:textSize="10sp" />
        </LinearLayout>
        <View
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray"
            android:layout_width="0.4dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll_turn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/arrow"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/packup" />

            <TextView
                android:id="@+id/tv_tb"
                android:textColor="@color/myred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="收起"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"/>


    <LinearLayout
        android:id="@+id/ll_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/w04"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周四" />

            <TextView
                android:id="@+id/d04"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1"
                android:textSize="10sp" />
        </LinearLayout>

        <View
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray"
            android:layout_width="0.4dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll05"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/w05"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周五" />

            <TextView
                android:id="@+id/d05"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2"
                android:textSize="10sp" />
        </LinearLayout>
        <View
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray"
            android:layout_width="0.4dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll06"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/w06"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周六" />

            <TextView
                android:id="@+id/d06"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="3"
                android:textSize="10sp" />
        </LinearLayout>
        <View
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/gray"
            android:layout_width="0.4dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/ll07"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/w07"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周日" />

            <TextView
                android:id="@+id/d07"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="4"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
